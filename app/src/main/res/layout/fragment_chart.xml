<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.Chart.ChartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20sp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:text="삼성전자 시나리오"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/blue"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="15sp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/stock_title"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="삼성전자"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_marginTop="15sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <TextView
            android:id="@+id/today_price"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="65,200 원"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@id/stock_title" />

        <TextView
            android:id="@+id/today_earn_rate"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:text="+3.45%"
            android:textColor="@color/red"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/today_price" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/today_earn_rate"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/new_scenario_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@color/background"
            android:paddingVertical="20sp"
            app:layout_constraintTop_toBottomOf="@id/line_chart">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="조건명"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="수량"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/title_text"
                app:layout_constraintEnd_toStartOf="@id/price_text"/>

            <TextView
                android:id="@+id/price_text"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="매입가격"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/amount_text"
                app:layout_constraintStart_toEndOf="@id/amount_text"
                app:layout_constraintEnd_toStartOf="@id/earn_rate_text"/>

            <TextView
                android:id="@+id/earn_rate_text"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="수익률"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="삼성전자1"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                app:layout_constraintStart_toStartOf="@id/title_text"/>

            <TextView
                android:id="@+id/trade_amount"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                app:layout_constraintStart_toStartOf="@id/amount_text"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="62,200"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                app:layout_constraintStart_toStartOf="@id/price_text" />

            <TextView
                android:id="@+id/earn"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="+4.82%"
                android:textColor="@color/red"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                app:layout_constraintStart_toStartOf="@id/earn_rate_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>