<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.NewScenario.Buy.BuyRateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/set_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20sp"
        android:paddingStart="30sp"
        android:paddingEnd="20sp">

        <Button
            android:id="@+id/set_option1_button"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:background="@drawable/baseline_check_box_gray"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/set_option1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상승률"
            android:textColor="@color/gray"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toTopOf="@id/set_option1_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option1_button"
            app:layout_constraintStart_toEndOf="@id/set_option1_button"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/set_option1_input"
            android:layout_width="80sp"
            android:layout_height="24sp"
            android:background="@drawable/gray_border_box"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            app:layout_constraintStart_toEndOf="@id/set_option1_text"
            app:layout_constraintTop_toTopOf="@id/set_option1_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option1_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/light_gray"
                android:layout_marginStart="5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:hint=" "
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/light_gray"
                android:layout_marginEnd="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/set_option1_text2"
            android:layout_width="90sp"
            android:layout_height="24sp"
            android:text="원   "
            android:textColor="@color/gray"
            android:textAlignment="textEnd"
            android:background="@drawable/gray_border_box"
            android:layout_marginEnd="10sp"
            app:layout_constraintTop_toTopOf="@id/set_option1_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option1_button"
            app:layout_constraintEnd_toStartOf="@id/set_option1_unit"/>

        <TextView
            android:id="@+id/set_option1_unit"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:text="이상"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="@id/set_option1_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option1_button"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/set_option2_button"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:background="@drawable/baseline_check_box_gray"
            android:layout_marginTop="20sp"
            app:layout_constraintTop_toBottomOf="@id/set_option1_button"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/set_option2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하락률"
            android:textColor="@color/gray"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toTopOf="@id/set_option2_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option2_button"
            app:layout_constraintStart_toEndOf="@id/set_option1_button"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/set_option2_input"
            android:layout_width="80sp"
            android:layout_height="24sp"
            android:background="@drawable/gray_border_box"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            app:layout_constraintStart_toEndOf="@id/set_option2_text"
            app:layout_constraintTop_toTopOf="@id/set_option2_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option2_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/light_gray"
                android:layout_marginStart="5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:hint=" "
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/light_gray"
                android:layout_marginEnd="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/set_option2_text2"
            android:layout_width="90sp"
            android:layout_height="24sp"
            android:text="원   "
            android:textColor="@color/gray"
            android:textAlignment="textEnd"
            android:background="@drawable/gray_border_box"
            android:layout_marginEnd="10sp"
            app:layout_constraintTop_toTopOf="@id/set_option2_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option2_button"
            app:layout_constraintEnd_toStartOf="@id/set_option2_unit"/>

        <TextView
            android:id="@+id/set_option2_unit"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:text="이하"
            android:textColor="@color/blue"
            app:layout_constraintTop_toTopOf="@id/set_option2_button"
            app:layout_constraintBottom_toBottomOf="@id/set_option2_button"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>