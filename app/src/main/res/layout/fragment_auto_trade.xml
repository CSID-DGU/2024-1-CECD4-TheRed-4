<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- 스크롤 뷰가 자식 뷰를 채우도록 설정 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fragment의 기존 내용 (예: 타이틀, 버튼, RecyclerView 등) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:layout_weight="1"
                android:text="삼성전자 조건"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add_condition"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/add_condition"
                android:background="@drawable/plus"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/conditions_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="155dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:backgroundTint="#0080FF"
            android:text="적용하기"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
