<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".presentation.chatbot.PracticeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> <!-- 높이를 wrap_content로 설정 -->

        <!--로고부터 주식 차트까지 상자로 감싸기-->

        <LinearLayout
            android:id="@+id/Stockinfo_box"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <!-- 회사 로고 -->
            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/samsung"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/> <!-- 가운데 정렬 -->

            <!-- 회사 이름 -->
            <TextView
                android:id="@+id/company_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연습모드"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#14131A"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/> <!-- 가운데 정렬 -->

            <!-- 퍼센트 값 -->
            <TextView
                android:id="@+id/profit_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+32.45%"
                android:textStyle="bold"
                android:textColor="#FF5353"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/> <!-- 가운데 정렬 -->
            <!-- 차트 이미지 -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/today_earn_rate" />
        </LinearLayout>
        <!-- 가로 버튼들 (뉴스, 분석, AI예측, 자동매매) -->
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:background="@drawable/rounded_background"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/Stockinfo_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="진행"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/button_background_unselected"
                android:padding="8dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="분석"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/button_background_unselected"
                android:padding="8dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="AI예측"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/button_background_unselected"
                android:padding="8dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="자동매매"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/button_background_unselected"
                android:padding="8dp"
                android:textSize="15dp"/>
        </LinearLayout>

        <!--Fragment 자리-->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/SellBuyButton"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- BUY/SELL 버튼 -->
        <LinearLayout
            android:id="@+id/SellBuyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/buyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="선택해서 거래하기"
                android:backgroundTint="#CDE9FF"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/sellButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="즉시 거래하기"
                android:textSize="16dp"
                android:textStyle="bold"
                android:backgroundTint="#CDE9FF"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
